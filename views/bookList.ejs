<!-- views/index.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
</head>
<body>
  <h1><%= title %></h1>
  <ul>
    <% books.forEach(book => { %>
    <li>
        <div><%= book.name %></div>
        <div><%= book.author_name %></div>
        <a href="/<%= book.id %>/updatebook">Edit book</a>   
        <form action="/<%= book.id %>/deletebook" method="POST" style="display:inline;">
          <button type="submit" onclick="return confirm('Are you sure you want to delete this book?');">Delete</button>
        </form> 
    </li>
    <% }); %>
  </ul>
  <a href="/">Back to Homepage</a>
  <a href="/addBook">Add a book</a>
  <a href="/addGenre">Add a genre</a>
  <a href="/addAuthor">Add an author</a>
</body>
</html>
