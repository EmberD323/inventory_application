<!DOCTYPE html>
<html>
<head>

  <title><%= title %></title>
  <link rel="stylesheet" href="/styles.css">

</head>
<body>
  <h1><%= title %></h1>
  <div>Explore book inventory by genre</div>
  <ul>
    <% genres.forEach(genre => { %>
    <li>
      <a href="/<%= genre.id %>/list"><%= genre.genre_name %></a>
      <a href="/<%= genre.id %>/updategenre">Edit name</a> 
      <form action="/<%= genre.id %>/deletegenre" method="POST" style="display:inline;">
        <button type="submit" onclick="return confirm('Are you sure you want to delete this genre? This will delete all books within the genre.');">Delete</button>
      </form> 
    </li>
    <% }); %>
  </ul>
  <div>Search by author</div>
  <form action="/searchAuthor" method="GET">
    <label for="author">Author Name: </label>
    <input type="text" name="author" id="author" required>
    <button type="submit">Submit</button>
  </form>
  <div>Search by title</div>
  <form action="/searchTitle" method="GET">
    <label for="title">Title: </label>
    <input type="text" name="title" id="title" required>
    <button type="submit">Submit</button>
  </form>
  <a href="/addBook">Add a book</a>
  <a href="/addGenre">Add a genre</a>
  <a href="/addAuthor">Add an author</a>
  
</body>
</html>
