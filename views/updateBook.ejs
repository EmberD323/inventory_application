
<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
  </head>
<body>
  <h1><%= title %></h1>
  <%- include("partials/errors.ejs") %>

  <form action="/<%= book.id %>/updatebook" method="POST">
    <input type="text" name="name" value="<%= book.name %>" required>
    <input type="text" name="author" value="<%= book.author_name %>" required>
    <select name="genre" id="genre">
      <% genres.forEach(genre => { %>
      <option value="<%= genre.genre_name %>"><%= genre.genre_name %></option>
      <% }); %>
    </select>
    <button type="submit">Update book</button>
  </form>
  <a href="/">Back to home</a>
  <a href="/addGenre">Add a genre</a>
  <a href="/addAuthor">Add an author</a>
</body>
</html>
